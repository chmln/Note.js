.note--container
    z-index 999
    position fixed
    width 350px
    max-width 98%
    font-family "Segoe UI", "Tahoma", "Calibri", "Verdana", sans-serif
    color #999
    box-sizing border-box

    &.topLeft
        top 8px
        left 8px

    &.topRight
        top 8px
        right 8px

    &.bottomRight
        bottom 8px
        right 8px

        .note-inner
            flex-direction column-reverse

    &.bottomLeft
        bottom 8px
        left 8px

        .note-inner
            flex-direction column-reverse



.note--inner
    display flex
    flex-direction column

.note
    position relative
    cursor pointer
    stroke white
    color white
    border 1px solid rgba(0,0,0,0.03)
    border-left 4px solid rgba(0,0,0,0.2)
    box-shadow 0 2px 15px 0 rgba(0,0,0,.25)
    opacity 0
    padding 8px
    animation noteFadeOut cubic-bezier(0.23, -0.39, 0, 1.38) 0.75s
    width 100%
    margin-bottom 12px
    display flex

    &:last-child
        margin-bottom 0

    &.shown
        animation noteFadeIn cubic-bezier(0.23, -0.39, 0, 1.38) 1s
        opacity 1

        .note--close, .note--title, .note--body
            display block

    &:hover
        box-shadow 0 3px 12px 0 rgba(0,0,0,.66)

    &.note--info
        background #3498db

    &.note--success
        background #2ECC71

    &.note--warning
        background #FFDB70
        color alpha(black, 0.7)
        stroke alpha(black, 0.7)

    &.note--error
        background #ec4e4e

    .note--content
        flex-basis 96%

    &.hasTitle .note--close
        padding-top 5px
        align-self flex-start

    .note--close
        padding-right 5px
        z-index 9
        text-align center
        align-self center
        text-decoration none
        color inherit
        stroke inherit
        font-weight bold
        font-size 16px
        outline none
        border none
        border-radius 50%
        cursor pointer
        transition .1s ease

        &:hover
            color alpha(black, 0.5)
            stroke alpha(black, 0.5)

        svg
            cursor pointer
            width 20px
            height inherit
            display block

            path
                stroke inherit
                stroke-width 2

    .note--title
        margin 0
        padding 0
        margin-bottom 8px
        font-size 20px
        line-height 28px
        font-weight 600
        color inherit
        opacity 0.9

        svg
            margin-right 4px
            line-height 20px
            width 17px
            height 17px


    .note--body
        font-size 16px
        font-weight 400
        color inherit
        margin 0

@keyframes noteFadeIn
    0%
        opacity 0

    100%
        opacity 1

@keyframes noteFadeOut
    0%
        opacity 1

    100%
        opacity 0
